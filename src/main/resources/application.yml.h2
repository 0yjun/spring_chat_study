server:
  port: 7002

springdoc:
  swagger-ui:
    enabled: true
    operations-sorter: method

spring:
#  datasource:
#    url: jdbc:mysql://localhost:3306/Spring_Chat
#    username: spring_chat
#    password: 12345678!
